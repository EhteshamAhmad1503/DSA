package LeetCode;

public class BookAllocation {

	boolean isPossible(int [] array,int m,int mid)
	{
		int studentCount =1;
		int pagesum=0;
		
		for(int i=0;i<array.length;i++)
		{
			if(pagesum + array[i] <=mid) {
						
			pagesum += array[i];
			}
			else
			{
				studentCount++;
			}
		}
		return true;
		
	}
	public static void main(String[] args) {

		int array[] = { 10, 20, 30, 40 };
		int m = 70;
		int s = 0;
		int sum = 0;
		
		for (int i = 0; i < array.length; i++) {
			sum += array[i];
		}
		
		int e = sum;
		int ans = -1;
		
		
		while (s <= e) {
			
			int mid = s + (e - s) / 2;
			if (isPossible(array, m, mid)) {
				ans = mid;
				e = mid - 1;
			} else {
				s = mid + 1;
			}
		}
		return ans;
	}

}
