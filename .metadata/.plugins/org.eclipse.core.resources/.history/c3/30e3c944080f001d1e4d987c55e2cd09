package Shorting;

public class SelectionShort {

	public static void main(String[] args) {

		int arr[] = { 6, 2, 8, 4, 10 };

		for (int i = 0; i < arr.length - 1; i++) {
			int MinIndex = i;
			for (int j = i + 1; j < arr.length - 1; j++) {
				if (arr[MinIndex] > arr[j]) {
					MinIndex = j;
				} else if (arr[i] < arr[j]) {
					int temp = MinIndex;
					MinIndex = arr[j];
					arr[j] = temp;
				}
				System.out.print(arr[j] + " ");
			}

		}
	}

}
