package LeetCode;

public class BookAllocation {

	public static void main(String[] args) {

		int array[] = { 10, 20, 30, 40 };
		int m = 70;
		int s = 0;
		int sum = 0;
		for (int i = 0; i < array.length; i++) {
			sum += array[i];
		}
		int e = sum;
		int ans = -1;
		int mid = s + (e - s) / 2;
		while (s <= e) {
			if (isPossible(array, m, mid)) {
				ans = mid;
				e = mid - 1;
			} else {
				s = mid + 1;
			}
		}
	}

}
