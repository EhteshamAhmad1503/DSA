package LeetCode;

public class MergeShortArray {

	static void Merge(int arr[], int n, int arr1[], int m, int arr2[]) {
		int i = 0;
		int j = 0;
		int k = 0;

		while (i < n && j < m)
		{
			if (arr[i] < arr1[j]) {
				arr2[k] = arr[i];
				k++;
				i++;

			}
			else
			{
				arr2[k] = arr[j];
				k++;
				j++;


			}
		}
		while (i < n) 
		{
			arr2[k] = arr[i];
			k++;
			i++;

		}
		while (j < m)
		{
			arr2[k] = arr2[j];
			k++;
			j++;

		}
	}

	static void Prints(int ans[], int n) {
		for (int i = 0; i < n; i++) {
			System.out.print(ans[i] + " ");
		}
	}

	public static void main(String[] args) {

		int arr[] = { 1, 3, 5, 7, 9, 11, 12 };
		int arr1[] = { 2, 4, 6, 8 };
		int arr2[] = new int[11];
		Merge(arr, 7, arr1, 4, arr2);
		Prints(arr2, 11);

	}
}
