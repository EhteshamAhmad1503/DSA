package LeetCode;

public class MergeShortArray {

	static void Merge(int arr[], int n, int arr1[], int m, int arr2[]) {
		int i = 0;
		int j = 0;
		int k = 0;

		while (i < n && j < m) {
			if (arr[i] < arr1[j]) {
				arr2[k] = arr[i];
				k++;
				i++;
			} else {
				arr2[k] = arr[j];
				k++;
				j++;
			}
		}
		while (i < n) {
			arr2[k] = arr[i];
			k++;
			i++;
		}
		while (j < m) {
			arr2[k] = arr1[j];
			k++;
			j++;
		}
	}

	public static void main(String[] args) {

		int arr[] = { 1, 3, 5, 7, 9, 11, 12 };
		int arr1[] = { 2, 4, 6, 8 };

		int arr2[] = { 0 };

	}

}
